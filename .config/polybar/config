[bar/mybar]
monitor = DisplayPort-2
bottom = true
tray-position = right
modules-right = date wireless-network
modules-left = i3
separator = " | "
height = 3%

[module/date]
type = internal/date
interval = 1.0
date = %Y-%m-%d%
date-alt = %A, %d %B %Y
time = %H:%M

[module/wireless-network]
type = internal/network
interface = wlp2s0

[module/i3]
type = internal/i3
